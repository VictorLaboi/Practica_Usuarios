<Application x:Class="PracticaVentas.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PracticaVentas"
             xmlns:view="clr-namespace:PracticaVentas.Views"
             xmlns:viewModel="clr-namespace:PracticaVentas.ViewModels">
    <Application.Resources>
        <!-- Asocia una vista con un ViewModel -->
        <DataTemplate DataType="{x:Type viewModel:PersonViewModel}">
            <view:MainRecordsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ManagmentViewModel}">
            <view:UserManagment/>
        </DataTemplate>

        <!-- Diccionarios de recursos -->
        <ResourceDictionary x:Key="R">

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Templates.xaml" />

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
