<UserControl x:Class="Kanban.Views.Form"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kanban.Views"
             xmlns:localControls="clr-namespace:Kanban.Views.ViewControl"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1420"
             Background="#ECF0F1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menú de navegación estilo Bootstrap -->
        <Border Grid.Row="0" Background="#E74C3C" Height="60">
            <DockPanel>
                <TextBlock Text="Kanban" Foreground="White" FontSize="24" FontWeight="Bold" Margin="20,0,20,0" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="10" VerticalAlignment="Center">
                    <Button Content="User" Foreground="White" Background="Transparent" FontSize="18" Padding="10" BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Workspace
" Foreground="White" Background="Transparent" FontSize="18" Padding="10" BorderThickness="0" Cursor="Hand" Width="124">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Layout" Foreground="White" Background="Transparent" FontSize="18" Padding="10" BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

   
        
    </Grid>
</UserControl>
