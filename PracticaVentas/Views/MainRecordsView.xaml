<UserControl x:Class="PracticaVentas.Views.MainRecordsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaVentas.Views"
             mc:Ignorable="d" Height="995" Width="1056">

    <Grid Margin="10">


        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="207"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"
                   Text="Admin User"
                   FontFamily="Sans"
                   FontSize="20"
                   FontWeight="Bold" Width="112"/>

        <Image Source="{Binding FotoEmpleado}"
                       Grid.Row="2"
                       HorizontalAlignment="Left"
                       Width="192" Margin="12,26,0,775" Grid.Column="1"/>
        <TextBlock Text="{Binding Path= OutputSource}" Grid.Row="1" Grid.Column="1" Background="Azure" Margin="0,0,0,915" Grid.RowSpan="2"/>
        <TextBlock Text="{Binding Path= OutputMessage}" Grid.Row="2" Margin="3,192,-3,589"
                    Grid.Column="1"/>


        <!-- Form Section -->
        <Border Grid.Row="1"
                BorderBrush="Black"
                Background="White"
                BorderThickness="1"
                Width="400"
                Padding="20"
                HorizontalAlignment="Center" Margin="0,0,0,511" Grid.RowSpan="2">
            <StackPanel Name="Main" Orientation="Vertical" Margin="10">

                <Label Content="Foto"/>
                <Button Content="Seleccionar Imagen" 
                        Margin="10"
                        HorizontalAlignment="Left"
                        Padding="10" 
                        Width="100"
                        Background="SteelBlue"
                        Foreground="White"
                        Command="{Binding ImageAddCommand, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="{Binding RutaFoto}"/>

                <Image Source="{Binding Person}"/>
                <Label Content="Nombre:"/>
                <TextBox Width="324" Text="{Binding Person.Name, Mode=TwoWay}"/>

                <Label Content="Apellidos:"/>
                <TextBox Width="324" Text="{Binding Person.LastName, Mode=TwoWay}"/>


                <Label Content="Rol:"/>
                <ComboBox Width="324" Text="{Binding Person.Role}">
                    
                </ComboBox>

                <Label/>
                <TextBox IsEnabled="False" Width="324" Text="{Binding Person.Role, Mode=TwoWay}"/>

                <Label Content="Descripción:"/>
                <TextBox Width="324" Text="{Binding Person.Description, Mode=TwoWay}"/>

                <!--<TextBox Width="324" Text="{Binding Person.Area, Mode=TwoWay}"/>-->
            </StackPanel>
        </Border>

        <!-- List and Actions Section -->
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Width="740" Margin="69,456,0,141">
            <WrapPanel ItemWidth="100" ItemHeight="60" HorizontalAlignment="Left" VerticalAlignment="Top">
                <!-- Botón Agregar -->
                <Button Content="Agregar" 
            Background="SteelBlue"
            Foreground="White"
            Command="{Binding AddCommand, UpdateSourceTrigger=PropertyChanged}"
            Margin="8"/>

                <!-- Botón Reload -->
                <Button Content="Reload"
            Background="SteelBlue"
            Foreground="White"
            Command="{Binding Reload}"
            Margin="8"/>

                <!-- Botón Limpiar -->
                <Button Content="Limpiar"
            Background="SteelBlue"
            Foreground="White"
            Command="{Binding Clear}"
            Margin="8"/>
            </WrapPanel>
            <DataGrid ItemsSource="{Binding PersonsModels}" Height="258" SelectionMode="Single" SelectionUnit="Cell" Width="740" Background="#FFC5BDBD" AutoGenerateColumns="False" 
                      HeadersVisibility="Column" CanUserDeleteRows="False" 
                      RowHeight="25"
                      CanUserResizeRows="False" CanUserAddRows="False"  IsReadOnly="True"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Apellidos" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Área" Binding="{Binding Area}" Width="*"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="Height" Value="Auto"/>
                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

        </StackPanel>
    </Grid>
</UserControl>