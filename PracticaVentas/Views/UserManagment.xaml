<UserControl x:Class="PracticaVentas.Views.UserManagment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaVentas.Views"
             mc:Ignorable="d" Height="995" Width="1056">
    <Grid Margin="10">


        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="202"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
               HorizontalAlignment="Center"
               Margin="0,10,0,10"
               FontFamily="Sans"
               FontSize="20"
               FontWeight="Bold" Width="168"><Run Language="es-mx" Text="User Managment"/></TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1"
               HorizontalAlignment="Center"
               Margin="0,10,0,10"
               FontFamily="Sans"
               FontSize="20"
               Text="{Binding Person.Name}"
               FontWeight="Bold" Width="168"/>
        <Image Source="{Binding Person.FotoEmpleado}"
               Grid.Row="2"
               HorizontalAlignment="Left"
               Width="200" Margin="4,9,0,775" Grid.Column="1"/>


        <Border Grid.Row="1"
            BorderBrush="Black"
            Background="White"
            BorderThickness="1"
            Width="830"
            Padding="10"
            HorizontalAlignment="Center" Margin="0,0,0,341" Grid.RowSpan="2">
            <StackPanel Name="UserManagent" Orientation="Vertical">
                <WrapPanel Width="469" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5" >
                    <WrapPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.143"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.498"/>
                        </TransformGroup>
                    </WrapPanel.RenderTransform>
                    <Label Content="ID Empleado" Margin="10"/>
                    <TextBox Width="297" Text="{Binding GuidInput, Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" Height="22" HorizontalAlignment="Center"/>
                    <Button Content="Buscar" Width="50" Height="22" Margin="10" Command="{Binding GetPerson}"/>
                </WrapPanel>
                <WrapPanel Margin="10,10,10,10">
                    <Label Content="Nombre" Width="53"/>
                    <TextBox Width="331" HorizontalAlignment="Center" IsEnabled="False" Text="{Binding CompleteName}" Margin="33,1,1,1" RenderTransformOrigin="0.399,0.377"/>
                </WrapPanel>

                <Label Content="Area" Width="58" HorizontalAlignment="Left"/>
                <ComboBox Width="279" HorizontalAlignment="Left"
                  ItemsSource="{Binding Areas}"
                  DisplayMemberPath="NameArea"
                  />
                <Label Content="Nivel" Width="41" HorizontalAlignment="Left"/>
                <ComboBox Width="279" HorizontalAlignment="Left">
                    <ComboBoxItem Content="Nuevo Ingreso"></ComboBoxItem>
                    <ComboBoxItem Content="LVL A"></ComboBoxItem>
                    <ComboBoxItem Content="LVL B"></ComboBoxItem>
                    <ComboBoxItem Content="LVL C"></ComboBoxItem>
                    <ComboBoxItem Content="LVL D"></ComboBoxItem>
                    <ComboBoxItem Content="LVL E"></ComboBoxItem>
                    <ComboBoxItem Content="LVL F"></ComboBoxItem>
                </ComboBox>                
                <Label Content="Supervisor" Width="41" HorizontalAlignment="Left"/>
                <ComboBox Width="279" HorizontalAlignment="Left"
                  ItemsSource="{Binding Super}"
                  DisplayMemberPath="NameArea"
                  />
            </StackPanel>
        </Border>

        <!-- List and Actions Section -->
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Width="740" Margin="4,596,0,1">
            <WrapPanel ItemWidth="100" ItemHeight="60" HorizontalAlignment="Left" VerticalAlignment="Top">
                <!-- Botón Agregar -->

                <!-- Botón Reload -->
                <Button Content="Reload"
        Background="SteelBlue"
        Foreground="White"
        Command="{Binding Reload}"
        Margin="8"/>

                <!-- Botón Limpiar -->
            </WrapPanel>
            <DataGrid ItemsSource="{Binding PersonsModels}" Height="258" SelectionMode="Single" SelectionUnit="Cell" Width="740" Background="#FFC5BDBD" AutoGenerateColumns="False" 
                  HeadersVisibility="Column" CanUserDeleteRows="False" 
                  RowHeight="25"
                  CanUserResizeRows="False" CanUserAddRows="False"  IsReadOnly="True"
                  >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Apellidos" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Área" Binding="{Binding Area}" Width="*"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                </DataGrid.Columns>
                <!--<DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Height" Value="Auto"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                </Style>
            </DataGrid.RowStyle>-->
            </DataGrid>

        </StackPanel>
    </Grid>

</UserControl>
